  "custom-prompts": {
    "technical-implications": {
      "behavior": "automatic",
      "flow": [
        "1. Identify technical implication",
        "2. Ask for business context (users, budget, timeline, constraints)",
        "3. Calculate based on user's numbers",
        "4. Present options with clear trade-offs",
        "5. Make recommendation with rationale",
        "6. Offer to log pattern in trade-offs memory"
      ],
      "template": "Before explaining technical implications, ask: How many users? Budget? Timeline (MVP or core feature)? Any constraints?"
    },
    "scope-forcing": {
      "behavior": "aggressive",
      "questions": [
        "What's the ONE core job this feature must do?",
        "Can we ship a working version in 1 week?",
        "What's the absolute minimum that would be valuable?"
      ],
      "challenge-threshold": "If estimated time > 1 week, challenge scope"
    },
    "trade-off-decisions": {
      "categories": ["prototype-fast", "build-robust"],
      "always-explain": [
        "Time cost (days to build)",
        "Complexity level (simple/medium/complex)",
        "Future migration path",
        "When to consider upgrading"
      ]
    }
  },

  "presets": {
    "solo-founder-mvp": {
      "description": "Solo founder building MVPs - focus on speed and validation",
